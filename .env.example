# === ZAHARA.AI AGENT CLINIC - ENVIRONMENT VARIABLES ===

# Application Settings
APP_NAME=Zahara.ai API
COMPANY_NAME=Zahara.ai
COMPANY_URL=https://zahara.ai
DEBUG=true
SECRET_KEY=your_secure_secret_key_here

# Database Configuration (Docker Compose)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration (Docker Compose)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Qdrant Configuration (Docker Compose)
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# API Keys (Get these from your LLM providers)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Demo Configuration
DEMO_API_KEY=zhr_demo_clinic_2024_observability_key
API_KEY_BYPASS_IN_DEV=true
DEV_MODE=true
ENABLE_DEV_PAGES=0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Flowise Configuration (Optional)
FLOWISE_API_URL=http://flowise:3000
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=secure_password_123

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_KEY=zhr_demo_clinic_2024_observability_key
VITE_DEV_MODE=true

# Docker Configuration
IMAGE_PREFIX=zahara-ai

# Testing Configuration
TESTING=false
SKIP_REDIS_CONNECTION=false
SKIP_QDRANT_CONNECTION=false

# === PRODUCTION NOTES ===
# 1. Never commit real API keys to version control
# 2. Use strong, unique SECRET_KEY in production
# 3. Set DEBUG=false in production
# 4. Configure proper CORS origins for production
# 5. Set up monitoring and logging
# 6. Use environment-specific database URLs
# 7. Configure backup procedures